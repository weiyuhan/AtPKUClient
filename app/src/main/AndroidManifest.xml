<?encoding = "utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="atpku.client">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="com.amap.api.location.APSService"></service>
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="89427d1df2286874f57348cb8e2f4123"/>

        <activity
            android:name="atpku.client.window.LoginWindow"
            android:label="登录">
        </activity>
        <activity
            android:name="atpku.client.window.RegisterWindow"
            android:label="注册">
        </activity>
        <activity
            android:name="atpku.client.window.SearchMsgWindow"
            android:label="高级搜索">
        </activity>
        <activity
            android:name="atpku.client.window.SearchResultWindow"
            android:label="搜索结果">
        </activity>
        <activity
            android:name="atpku.client.window.HelpWindow"
            android:label="使用说明">
        </activity>
        <activity
            android:name="atpku.client.window.SendMsgWindow"
            android:label="发送信息">
        </activity>
        <activity
            android:name="atpku.client.window.MapWindow">
        </activity>
        <activity
            android:name="atpku.client.window.LoadingWindow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="atpku.client.window.FeedbackWindow"
            android:label="用户反馈">
        </activity>
        <activity
            android:name="atpku.client.window.UserInfoWindow"
            android:label="个人信息">
        </activity>
        <activity
            android:name="atpku.client.window.PlaceWindow"
            android:label="地点">
        </activity>
        <activity
            android:name="atpku.client.window.MsgWindow"
            android:label="信息">
        </activity>
        <activity
            android:name="atpku.client.window.EditMyInfoWindow"
            android:label="修改个人资料">
        </activity>

    </application>

</manifest>
